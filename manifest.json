{
  "manifest_version": 2,

  "name": "News Humor",
  "short_name": "News Humor",
  "description": "Humerously swap words in the news headlines and stories.",
  "version": "1.61",

  "browser_action": {
    "default_icon": "news-icon.png",
    "default_popup": "popup.html",
    "default_title": "News Humor"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },

  "content_scripts": [
  {
    "js": ["content.js"],
    "matches": [
      "*://news.google.com/*",
      "*://*.wsj.com/*",
      "*://*.bloomberg.com/*",
      "*://abcnews.go.com/*",
      "*://espn.go.com/*",
      "*://*.nytimes.com/*",
      "*://*.washingtonpost.com/*",
      "*://*.huffingtonpost.com/*",
      "*://*.reuters.com/*",
      "*://*.foxnews.com/*",
      "*://*.chicagotribune.com/*",
      "*://*.pcmag.com/*",
      "*://*.people.com/*",
      "*://*.denverpost.com/*",
      "*://*.time.com/*",
      "*://*.sltrib.com/*",
      "*://*.scienceworldreport.com/*",
      "*://*.nasa.gov/*",
      "*://*.space.com/*",
      "*://*.spacex.com/*",
      "*://*.nasdaq.com/*",
      "*://*.sfgate.com/*",
      "*://*.nj.com/*",
      "*://*.wkyc.com/*",
      "*://*.discovery.com/*",
      "*://*.cnn.com/*",
      "*://*.verdenews.com/*",
      "*://*.dcourier.com/*",
      "*://*.mashable.com/*",
      "*://*.macrumors.com/*"
    ]
  }
  ]
}
