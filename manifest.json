{
  "manifest_version": 2,

  "name": "News Humor",
  "short_name": "News Humor",
  "description": "Humorously swap words in the news headlines and stories.",
  "version": "1.73",

  "browser_action": {
    "default_icon": "news-icon.png",
    "default_popup": "popup-2.html",
    "default_title": "News Humor"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "icons": { 
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png" },

  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },

  "content_scripts": [
  {
    "js": ["content.js"],
    "matches": ["*://*/*"]
  }
  ]
}
